generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String    @unique
  password        String
  createdAt       DateTime  @default(now())
  name            String?
  resetCode       String?
  resetCodeExpiry DateTime?
  id              Int       @id @default(autoincrement())
}

model HomeSlider {
  id        Int      @id @default(autoincrement())
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Product {
  id            String    @id @default(uuid())
  name          String
  description   String?
  price         Float

  // Multiple values (no relations)
  categories    String[]  @default([])   // ["dress", "shoes"]
  subCategories String[]  @default([])   // ["men", "women"]
  brands        String[]  @default([])   // ["Nike", "Adidas"]
  sizes         String[]  @default([])   // ["S", "M", "L", "XL"]
  colors        String[]  @default([])   // ["Red", "Black"]
  imageUrls     String[]  @default([])

  // ðŸ‘‰ Rent or Sell
  saleType      SaleType  @default(SELL)

  // ðŸ‘‰ NEW FIELD (Old / New)
  condition     ProductCondition @default(NEW)

  isPublished   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([price])
}

enum SaleType {
  RENT
  SELL
}

enum ProductCondition {
  NEW
  OLD
}

