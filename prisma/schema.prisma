generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String    @unique
  password        String
  createdAt       DateTime  @default(now())
  name            String?
  resetCode       String?
  resetCodeExpiry DateTime?
  id              Int       @id @default(autoincrement())
}

model HomeSlider {
  id        Int      @id @default(autoincrement())
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Product {
  id            String    @id @default(uuid())
  name          String
  description   String?
  price         Float

  // Multiple values (no relations)
  categories    String[]  @default([])         // Example: ["dress", "shoes"]
  subCategories String[]  @default([])         // Example: ["men", "women"]
  productTypes  String[]  @default([])         // Example: ["casual", "party"] (for each subCategory)
  brands        String[]  @default([])         // Example: ["Nike", "Adidas"]
  sizes         String[]  @default([])         // Example: ["S", "M", "L", "XL"]
  colors        String[]  @default([])         // Example: ["Red", "Black"]
  imageUrls     String[]  @default([])         // Store multiple images URLs

  // Sell or Rent
  saleType      SaleType  @default(SELL)

  // Condition of product
  condition     ProductCondition @default(NEW)

  isPublished   Boolean   @default(false)     // Whether product is live
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([price]) // Optional index for faster price queries
}

enum SaleType {
  RENT
  SELL
}

enum ProductCondition {
  NEW
  OLD
}
