generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String    @unique
  password        String
  createdAt       DateTime  @default(now())
  name            String?
  resetCode       String?
  resetCodeExpiry DateTime?
  id              Int       @id @default(autoincrement())

    favorites       Favorite[]
      kyc             KYC?
    

}

model KYC {
  id                Int           @id @default(autoincrement())
  userId            Int           @unique

  fullName          String
  fatherName        String?
  documentType      KycDocumentType
  documentNumber    String
  documentExpiry    DateTime?
  documentFront     String        // Front image of the document
  documentBack      String        // Back image of the document
  faceImage         String        // Selfie/live check image

  status            KycStatus     @default(PENDING)
  rejectionReason   String?

  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

enum KycDocumentType {
  CNIC
  PASSPORT
  DRIVING_LICENSE
}



model HomeSlider {
  id        Int      @id @default(autoincrement())
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id            String           @id @default(uuid())
  description   String?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  imageUrls     String[]         @default([])
  isPublished   Boolean          @default(false)
  name          String
  price         Float
  brands        String[]         @default([])
  categories    String[]         @default([])
  colors        String[]         @default([])
  sizes         String[]         @default([])
  subCategories String[]         @default([])
  saleType      SaleType         @default(SELL)
  condition     ProductCondition @default(NEW)
  productTypes  String[]         @default([])

  @@index([price])

    favorites       Favorite[]
}

enum SaleType {
  RENT
  SELL
}

enum ProductCondition {
  NEW
  OLD
}


model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, productId]) 
}
